{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "Node",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "pretty": true,
        "removeComments": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "typeRoots": ["src/types/express", "node_modules/@types"]
    },
    "include": ["src/**/*"]
}
