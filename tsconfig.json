{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "Node",
        "declaration": false,
        "outDir": "./lib",
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "pretty": true,
        "removeComments": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
